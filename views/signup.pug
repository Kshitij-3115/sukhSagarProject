doctype html
html
    head
        title Sign up 
        link(rel="stylesheet" href="/css/style.css")
        link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css")
        link(href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet")
    body
        include includes/navbar.pug
        div(class="col-5 container text-center" id="topContent")
            p Create your account 
            div(id="top1") 
                p Join us  
        div(class="col-5 container" id="formDiv" style="margin-top:10px; margin-bottom : 200px") 
            form(id="userForm" method="post" action="/form/submit" enctype="multipart/form-data")
                div(class="form-row d-flex bigDiv")
                    div(class="form-group col-md-4 smallDiv")
                        label(for="fname" class="labelStyle required" ) First name 
                        input(type="text" class="form-control" id="fname" name="fname" placeholder="First name" required )
                    div(class="form-group col-md-4 smallDiv")
                        label(for=" mname " class="labelStyle required" ) Middle name 
                        input(type="text" class="form-control" id="mname" name="mname" placeholder="Middle name" required )
                    div(class="form-group col-md-4 smallDiv")
                        label(for="fname " class="labelStyle required")  Last name 
                        input(type="text" class="form-control" id="lname" name="lname" placeholder="Last name" required)
                div(class="form-group col-10 smallDiv bigDiv")
                    label(for="email" class="labelStyle required") Email 
                    input(type="email" class="form-control" id="email" name="email" placeholder="Enter Valid Email" required)
                div(class="form-row d-flex bigDiv")
                    div(class="form-group col-md-6 smallDiv")
                        label(for="passwd" class="labelStyle required" ) Password 
                        input(type="password" class="form-control" id="passwd" name="passwd" placeholder="eg. Kshitij_1-2@34" required)
                    div(class="form-group col-md-6 smallDiv")
                        label(for=" passwdC " class="labelStyle required" ) Confirm Password  
                        input(type="password" class="form-control" id="passwdC" name="passwdC" placeholder="Reenter password" required)
                div(class="bigDiv")
                    h5(style="color:#38ada9; font-size:16px;").
                        make sure your password meets these conditions -
                    p(style="color:#95afc0; font-size:14px").
                        password must be atleast 8 characters long.  
                        password must have atleast 1 Number,1 lower case letter,1 upper case letter.
                        password must have atleast 1 special characters (@#$%&).
                        
                div(class="form-row d-flex bigDiv")
                    div(class="form-group col-md-5 smallDiv") 
                        label(for="passwd" class="labelStyle required" ) Mobile number 
                        input(type="number" class="form-control" id="mobile" name="mobile" pattern="[0-9]{10}" placeholder="10 Digit Mobile number" required)
                    div(class="form-group col-md-3 smallDiv") 
                        button(type="button" class="btn btn-dark mt-4 " id="otp") Send OTP
                    div(class="spinner-border text-success col-md-3 mt-4 mx-2" role="status" id="spinnerOTP" style="display : none")
                        span(class="sr-only")
                    div(class="form-group col-md-4 " hidden="true" id="otpDiv")
                        label(for="cOTP" class="labelStyle required") Enter OTP 
                        div(class="form-group" class=" d-flex")
                            input(type="number" class="form-control" id="cOTP" name="cOTP" placeholder="OTP") 
                            button(type="button" class="btn btn-success" id="cOTP2") Confirm 
                div(class="form-group col-md-10 bigDiv")
                    label(for="address" class="labelStyle required") address
                    input(type="text" class="form-control" id="address" name="address" placeholder="Block, Street etc" required)
                div(class="form-row d-flex bigDiv")
                    div(class="form-group col-md-8 smallDiv")
                        label(for="edu" class="labelStyle required") Select education
                        include includes/eduDropdown.pug  
                    div(class="form-group col-md-4 smallDiv")
                        label(for="dob" class="labelStyle required") Date of birth
                        input(type="date" id="dob" name="dob" class="form-control")
                div(class="form-row d-flex bigDiv")
                    div(class="form-group col-md-5 smallDiv")
                        label(for="pin" class="labelStyle required") Pincode
                        input(type="text" id="pin" class="form-control " name="pin" pattern="^[1-9]{1}[0-9]{2}\\s{0,1}[0-9]{3}$"  placeholder="eg. 416418") 
                    div(class="spinner-border text-success col-md-3 mt-4 mx-2" role="status" id="spinnerPin" style="display : none")
                        span(class="sr-only")
                    div(class="smallDiv" style="margin-top : 30px")
                        p(class="text-danger") eg. 416418(valid) , 014986(invalid)
                div(class="form-row d-flex bigDiv")
                    div(class="form-group col-md-4 smallDiv")
                        label(for="place" class="labelStyle required") Place
                        select(class="custom-select form-control bg-light" id="place" name="place") 
                            option(selected disabled) --city/villege/area--
                    div(class="form-group col-md-4 smallDiv")
                        label(for="state" class="labelStyle required") State
                        select(class="custom-select form-control bg-light" id="state" name="state") 
                            option(selected disabled) ---Select state---
                    div(class="form-group col-md-4 smallDiv")
                        label(for="country" class="labelStyle required") Country
                        select(class="custom-select form-control bg-light" id="country" name="country") 
                            option(selected disabled) ---Select country---
                div(class="form-group col-md-12 bigDiv")
                    label(for="resume" class="labelStyle required col-md-12") attach resume here (file size < 2MB)  
                    input(type="file" id="resume" class="form-control col-md-5" style="color:white;background-color:#778ca3" name="resumeFile" required )
                div(class="form-group bigDiv text-center" style="margin-top:30px")
                    button(type="submit" class="btn col-md-4" style="color:white; background-color:#8854d0;") Sign me up
        include includes/footer.pug
                
                    
                
                        
                    
                






