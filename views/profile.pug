doctype html 
html 
    head
        title Successfull
        link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css")
        link(href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet")
        link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css")
    body
        if loggedin
            div(class="container col-5" style="margin-top:10%; align-items:center; margin:15% auto 0% auto" )
                div(class="d-flex" style="align-items:center;margin:auto")
                    i(class="bi bi-emoji-smile-fill" style="font-size:50px; color: #16a085")
                    h3(style="color :#9b59b6; font-weight:500; letter-spacing:1px" class="mx-3") Welcome back ! #{username}  
                div(style="margin:auto")
                    p(style="font-size:18px; letter-spacing:1px; color:#636e72;margin-left:15% " ) want to logout?
                    a(class="btn btn-outline-success " role="button" href="/user/logout" style="margin-left:15%" ) Logout
        else 
            div(class="container col-5" style="margin-top:10%; align-items:center; margin:15% auto 0% auto" )
                div(class="d-flex" style="align-items:center;margin:auto")
                    i(class="bi bi-emoji-frown-fill " style="font-size:50px; color:#ff7675")
                    h3(style="color :#9b59b6; font-weight:500; letter-spacing:1px" class="mx-3") oops! you are logged out! 
                div(style="margin:auto")
                    p(style="font-size:18px; letter-spacing:1px; color:#636e72;margin-left:15% " ) please login to continue
                    a(class="btn btn-outline-success " role="button" href="/" style="margin-left:15%" ) Logout




